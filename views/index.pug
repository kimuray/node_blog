extends layout

block content
    h2= title
    style
      ul {list-style: none;}
      .name {font-size: 0.8em; color: #555;}
      .box {border: 1px; solid: #888; padding: 20px; margin-bottom: 40px;}
    ul
      each post in posts
        li
          .box
             div #{post.comment}
             p(class="name") #{post.name}
